{
  // Exclude Babel build folders:
  "files.exclude": {
    "packages/*/dist/**": true,
    "packages/*/lib/**": true
  },
  // Disable VSCode's and Vetur's own validator in favor of ESLint:
  "javascript.validate.enable": false,
  "npm.validate.enable": false,
  "vetur.validation.script": false,
  // Enable ESLint validation:
  "eslint.enable": true,
  // Enable ESLint and autoFix in Vue files:
  // https://github.com/vuejs/eslint-plugin-vue/issues/327
  "eslint.validate": [
    "javascript",
    {
      "language": "vue",
      "autoFix": true
    }
  ],
  "jest.autoEnable": true
}
