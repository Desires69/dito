{
  "name": "@ditojs/server",
  "version": "0.2.0",
  "description": "Dito.js Server – Dito.js is a minimal and modern web framework, based on Koa2 and Objection.js",
  "main": "lib/index.js",
  "repository": "https://github.com/ditojs/dito-server",
  "author": "Jürg Lehni <juerg@scratchdisk.com> (http://scratchdisk.com)",
  "license": "MIT",
  "files": [
    "src/",
    "lib/"
  ],
  "scripts": {
    "knex": "babel-node node_modules/.bin/knex",
    "build": "babel src --out-dir lib --copy-files --source-maps inline",
    "watch": "babel src --out-dir lib --watch --copy-files --source-maps inline",
    "prepare": "yarn build",
    "posttest": "yarn lint && nsp check",
    "lint": "cross-env NODE_ENV=production eslint src",
    "lint:fix": "eslint --fix src",
    "precommit": "yarn lint"
  },
  "bin": {
    "dito": "./lib/cli/index.js"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0",
    "yarn": ">= 1.0.0"
  },
  "dependencies": {
    "@ditojs/utils": "^0.2.1",
    "@koa/cors": "^2.2.1",
    "ajv": "^6.0.1",
    "bluebird": "^3.5.1",
    "chalk": "^2.3.0",
    "eventemitter2": "^5.0.1",
    "fs-extra": "^5.0.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-conditional-get": "^2.0.0",
    "koa-etag": "^3.0.0",
    "koa-helmet": "^3.3.0",
    "koa-logger": "^3.1.0",
    "koa-pino-logger": "^2.1.1",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.3.0",
    "objection": "github:lehni/objection.js#6968c03be0fe7328447668bf19d7547bfb783663",
    "pluralize": "^7.0.0",
    "repl": "^0.1.3"
  },
  "peerDependencies": {
    "knex": "^0.14.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.37",
    "@babel/core": "^7.0.0-beta.37",
    "@babel/node": "^7.0.0-beta.37",
    "@babel/preset-env": "^7.0.0-beta.37",
    "@babel/preset-stage-1": "^7.0.0-beta.37",
    "babel-eslint": "^8.2.1",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.3",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-promise-to-bluebird": "2.0.0-beta.1",
    "cross-env": "^5.1.3",
    "eslint": "^4.15.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "knex": "^0.14.2",
    "pg": "^7.4.1",
    "sqlite3": "^3.1.13"
  }
}
