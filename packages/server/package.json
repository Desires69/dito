{
  "name": "dito-framework",
  "version": "0.1.0",
  "description": "Dito Framework is a minimal and modern object oriented REST API server framework, based on Koa2 and Objection.js",
  "main": "lib/index.js",
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "repository": "https://github.com/lineto/dito-framework",
