{
  "name": "lineto-koa",
  "version": "1.0.0",
  "description": "API backend for Lineto.com, based on Koa2 and Objection.js",
  "main": "index.js",
  "repository": "https://github.com/lineto/lineto-koa",
  "author": "JÃ¼rg Lehni <juerg@scratchdisk.com> (http://scratchdisk.com)",
  "license": "MIT",
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "knex": "babel-node node_modules/.bin/knex",
    "db:create_migration": "babel-node src/scripts/migration",
    "db:migrate": "yarn knex migrate:latest",
    "db:rollback": "yarn knex migrate:rollback",
    "db:seed": "babel-node src/scripts/seed",
    "start": "babel-node src",
    "dev": "nodemon --watch src --exec 'yarn start'",
    "debug": "DEBUG=* yarn start",
    "inspect": "DEBUG=* babel-node --inspect --debug-brk src",
    "build": "babel src -d dist --copy-files --source-maps",
    "serve": "node dist",
    "posttest": "yarn lint && nsp check",
    "lint": "NODE_ENV=production eslint src",
    "lint:fix": "eslint --fix src",
    "precommit": "yarn lint"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "ajv-merge-patch": "^3.0.0",
    "bluebird": "^3.5.1",
    "colors": "^1.1.2",
    "eventemitter2": "^4.1.2",
    "faker": "^4.1.0",
    "fs-extra": "^4.0.2",
    "knex": "^0.13.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-helmet": "^3.2.0",
    "koa-logger": "^3.1.0",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.1",
    "objection": "https://github.com/lehni/objection.js/tarball/8536ca138a269aabe215901c7157bc498cfbd213",
    "objection-find": "^0.5.1",
    "pluralize": "^7.0.0",
    "sqlite3": "^3.1.13",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-plugin-dynamic-import-node": "^1.0.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-promise-to-bluebird": "^1.1.1",
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "nodemon": "^1.12.1"
  }
}
