  "files": [
    "src/",
    "lib/"
  ],
  "engines": {
    "node": ">= 8.0.0",
    "yarn": ">= 1.0.0"
  },
  "scripts": {
    "knex": "babel-node node_modules/.bin/knex",
    "build": "babel src --out-dir lib --copy-files --source-maps inline",
