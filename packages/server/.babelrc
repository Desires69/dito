{
  "presets": [
    ["@babel/preset-env", {
      "targets": {
        "node": "8.9"
      },
      "useBuiltIns": "usage"
    }],
    ["@babel/preset-stage-1"]
  ],
  "plugins": [
    "@babel/plugin-syntax-dynamic-import",
    ["module-resolver", {
      "cwd": "babelrc",
      "alias": {
        "~": ".",
        "@": "./src"
      }
    }],
    "transform-promise-to-bluebird"
  ]
}
