{
  "presets": [
    "@ditojs/dito",
    ["@babel/preset-env", {
      "targets": {
        "node": "9",
        "browsers": [
          "> 1%",
          "last 2 versions",
          "not ie <= 8"
        ]
      },
      "useBuiltIns": "usage"
    }]
  ],
  "plugins": [
    ["module-resolver", {
      "cwd": "babelrc",
      "alias": {
        "~": ".",
        "@": "./src"
      }
    }]
  ],
  "env": {
    "test": {
      "presets": [
        ["@babel/preset-env", {
          "targets": {
            "node": "9"
          }
        }]
      ]
    }
  }
}
