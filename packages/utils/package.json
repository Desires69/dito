{
  "name": "@ditojs/utils",
  "version": "0.2.1",
  "description": "Dito.js Utility Functions – Dito.js is a minimal and modern web framework, based on Koa2 and Objection.js",
  "main": "lib/index.js",
  "repository": "https://github.com/ditojs/dito-utils",
  "author": "Jürg Lehni <juerg@scratchdisk.com> (http://scratchdisk.com)",
  "license": "MIT",
  "files": [
    "src/",
    "lib/"
  ],
  "scripts": {
    "build": "babel src --out-dir lib --copy-files --source-maps inline",
    "watch": "babel src --out-dir lib --watch --copy-files --source-maps inline",
    "prepare": "yarn build",
    "lint": "cross-env NODE_ENV=production eslint src",
    "lint:fix": "eslint --fix src",
    "precommit": "yarn lint"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0",
    "yarn": ">= 1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.37",
    "@babel/core": "^7.0.0-beta.37",
    "@babel/node": "^7.0.0-beta.37",
    "@babel/preset-env": "^7.0.0-beta.37",
    "@babel/preset-stage-1": "^7.0.0-beta.37",
    "babel-eslint": "^8.2.1",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.3",
    "babel-plugin-module-resolver": "^3.0.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.15.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1"
  }
}
