{
  "name": "dito",
  "private": true,
  "description": "Dito.js is a minimal and modern web framework with a focus on API driven development, based on Koa.js, Objection.js and Vue.js",
  "repository": "https://github.com/ditojs/dito",
  "author": "JÃ¼rg Lehni <juerg@scratchdisk.com> (http://scratchdisk.com)",
  "license": "MIT",
  "scripts": {
    "build": "lerna run build --stream",
    "watch": "lerna run watch --stream --no-sort --concurrency 5",
    "lint": "cross-env NODE_ENV=production eslint --ext .js,.vue packages/**/src",
    "lint:fix": "cross-env NODE_ENV=production eslint --fix --ext .js,.vue packages/**/src",
    "test": "node --icu-data-dir=node_modules/full-icu node_modules/.bin/jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "engines": {
    "node": ">= 9.0.0",
    "yarn": ">= 1.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "10.0.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-promise-to-bluebird": "^2.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-babel": "^5.2.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "full-icu": "^1.2.1",
    "husky": "^1.0.0",
    "jest": "^23.6.0",
    "lerna": "^3.4.0"
  }
}
